{
  "name": "@hollowverse/config",
  "version": "0.0.0-Set-by-CI-when-publishing",
  "description": "Common configurations for Hollowverse repos",
  "repository": "https://github.com/hollowverse/config",
  "license": "Unlicense",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "validate-filenames": "validate-filenames --config validateFilenames.js",
    "lint-staged": "lint-staged",
    "test": "run-p -c --aggregate-output validate-filenames lint-staged 'clown check'",
    "build": "# Building is not required for this package",
    "set-version": "set-version",
    "clown": "clown",
    "pre-push": "yarn test",
    "pre-commit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "pre-push": "yarn pre-push",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ],
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "**/!(package).json": [
      "prettier --write",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint -c .eslintrc.json --no-eslintrc"
    ]
  },
  "dependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.44",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.44",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "rxjs-tslint-rules": "^3.14.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "tslint-eslint-rules": "^5.0.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-react": "^3.5.1",
    "typescript-eslint-parser": "^14.0.0"
  },
  "devDependencies": {
    "@hollowverse/clown": "^0.0.3",
    "@hollowverse/utils": "^4.1.4",
    "@hollowverse/validate-filenames": "^1.4.0",
    "babel-eslint": "^8.2.2",
    "del-cli": "^1.1.0",
    "husky": "^0.15.0-rc.8",
    "lint-staged": "^7.0.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.10.2",
    "typescript": "^2.7.2",
    "yarnhook": "^0.1.1",
    "eslint": "^4.18.2"
  },
  "engines": {
    "node": ">= 6.10"
  },
  "private": false
}
