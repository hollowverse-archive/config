{
  "name": "@hollowverse/common",
  "version": "3.2.4",
  "description": "Common configurations, helper functions and code quality scripts for Hollowverse repos",
  "repository": "https://github.com/hollowverse/common",
  "license": "Unlicense",
  "scripts": {
    "validate-filenames": "validate-filenames",
    "lint-ts": "tslint --project ./helpers 'helpers/**/*.ts{,x}'",
    "check-ts": "tsc --project ./helpers --noEmit",
    "build/ts": "tsc --project ./helpers",
    "build/babel": "babel helpers -d helpers",
    "build": "run-s clean build/ts build/babel",
    "lint-staged": "lint-staged",
    "clean": "del-cli 'helpers/**.{d.ts,js}'",
    "lint": "run-p -n -c --aggregate-output lint-ts",
    "pretest": "run-p -n -c --aggregate-output lint validate-filenames lint-staged",
    "test": "run-p -n --aggregate-output -l check-ts"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6.10"
          },
          "useBuiltIns": "usage"
        }
      ]
    ],
    "plugins": [
      "@babel/transform-runtime"
    ],
    "comments": false,
    "sourceMap": "inline"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretest",
      "pre-push": "yarn test",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.40",
    "glob": "^7.1.2",
    "jszip": "^3.1.4",
    "lodash": "^4.17.4",
    "minimatch": "^3.0.4",
    "shelljs": "^0.7.8"
  },
  "peerDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.18.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "husky": "^0.15.0-rc.8",
    "lint-staged": "^6.1.1",
    "prettier": "^1.10.2",
    "rxjs-tslint-rules": "^3.12.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^1.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "tslint-eslint-rules": "^5.0.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^14.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.40",
    "@babel/polyfill": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@hollowverse/validate-filenames": "^1.3.2",
    "@types/glob": "^5.0.32",
    "@types/jszip": "^3.1.3",
    "@types/lodash": "^4.14.74",
    "@types/minimatch": "^3.0.0",
    "@types/node": "^8.0.24",
    "@types/shelljs": "^0.7.4",
    "babel-eslint": "^8.2.1",
    "del-cli": "^1.1.0",
    "eslint": "^4.18.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "husky": "^0.15.0-rc.8",
    "lint-staged": "^6.1.1",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.10.2",
    "rxjs-tslint-rules": "^3.14.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "tslint-eslint-rules": "^5.0.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "yarnhook": "^0.1.1"
  },
  "engines": {
    "node": ">= 9.2"
  }
}
