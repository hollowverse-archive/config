{
  "name": "@hollowverse/common",
  "version": "1.2.0",
  "description": "Common configurations, helper functions and code quality scripts for Hollowverse repos",
  "repository": "https://github.com/hollowverse/common",
  "license": "Unlicense",
  "scripts": {
    "validate-file-names": "node ./validateFileNames.js",
    "lint-js": "eslint '**/*.js{,x}'",
    "check-js": "tsc --noEmit",
    "lint-staged": "lint-staged"
  },
  "pre-commit": [
    "check-js",
    "validate-file-names",
    "lint-staged"
  ],
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ]
  },
  "bin": {
    "validate-file-names": "./validateFileNames.js"
  },
  "dependencies": {
    "glob": "^7.1.2",
    "jszip": "^3.1.4",
    "lodash": "^4.17.4",
    "minimatch": "^3.0.4",
    "shelljs": "^0.7.8"
  },
  "peerDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.1.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.1.0",
    "lint-staged": "^4.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^1.0.0",
    "tslint": "^5.5.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-react": "^3.0.0",
    "typescript": "^2.4.2"
  },
  "devDependencies": {
    "@types/glob": "^5.0.32",
    "@types/jszip": "^3.1.0",
    "@types/lodash": "^4.14.74",
    "@types/minimatch": "^3.0.0",
    "@types/node": "^8.0.24",
    "@types/shelljs": "^0.7.4",
    "babel-eslint": "^7.2.3",
    "eslint": "^4.1.1",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.1.0",
    "lint-staged": "^4.0.3",
    "npm-run-all": "^4.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "typescript": "^2.4.2"
  }
}
