{
  "name": "@hollowverse/common-config",
  "version": "1.0.6",
  "description": "Common configurations for Hollowverse repos",
  "repository": "https://github.com/hollowverse/common-config",
  "license": "Unlicense",
  "scripts": {
    "lint": "tslint '**/*.t{s,sx}' -e '**/node_modules/**' --fix --project ./tsconfig.json --type-check",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "ts-node": "^3.0.3",
    "tslint": "^5.0.0",
    "tslint-config-standard": "^5.0.2",
    "tslint-react": "^3.0.0",
    "typescript": "^2.1.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "pre-commit": "lint-staged",
  "commonpkgShare": [
    "scripts",
    "devDependencies",
    "lint-staged",
    "pre-commit"
  ]
}
