{
  "name": "@hollowverse/common",
  "version": "3.1.4",
  "description": "Common configurations, helper functions and code quality scripts for Hollowverse repos",
  "repository": "https://github.com/hollowverse/common",
  "license": "Unlicense",
  "scripts": {
    "validate-filenames": "validate-filenames",
    "lint-js": "eslint '**/*.js{,x}'",
    "check-js": "tsc --noEmit",
    "lint-staged": "lint-staged",
    "pretest": "run-p --aggregate-output validate-filenames lint-staged",
    "test": "run-p --aggregate-output -l check-js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretest",
      "pre-push": "yarn test",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ]
  },
  "dependencies": {
    "glob": "^7.1.2",
    "jszip": "^3.1.4",
    "lodash": "^4.17.4",
    "minimatch": "^3.0.4",
    "shelljs": "^0.7.8"
  },
  "peerDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.18.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "husky": "^0.15.0-rc.8",
    "lint-staged": "^6.1.1",
    "prettier": "^1.10.2",
    "rxjs-tslint-rules": "^3.12.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^1.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "tslint-eslint-rules": "^5.0.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^14.0.0"
  },
  "devDependencies": {
    "@hollowverse/validate-filenames": "^1.3.2",
    "@types/glob": "^5.0.32",
    "@types/jszip": "^3.1.0",
    "@types/lodash": "^4.14.74",
    "@types/minimatch": "^3.0.0",
    "@types/node": "^8.0.24",
    "@types/shelljs": "^0.7.4",
    "babel-eslint": "^8.2.1",
    "eslint": "^4.18.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "husky": "^0.15.0-rc.8",
    "lint-staged": "^6.1.1",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.10.2",
    "typescript": "^2.7.2",
    "yarnhook": "^0.1.1"
  },
  "engines": {
    "node": ">= 9.2"
  }
}
